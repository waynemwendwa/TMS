{
  "name": "inventory-management-system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm -w apps/web run dev",
    "dev:api": "npm -w apps/api run dev",
    "build": "./build.sh",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd apps/api && npm start",
    "start:web": "cd apps/web && npm start",
    "build:api": "npm install && npm run build:db && cd apps/api && npm install && npm run build",
    "build:web": "npm install && npm run build:db && cd apps/web && npm install && npm run build",
    "build:db": "npm -w packages/db run build",
    "migrate": "cd packages/db && npx prisma migrate deploy && npx prisma generate",
    "lint": "npm -ws run lint",
    "format": "prettier -w .",
    "install:all": "npm install && npm -ws run install"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2"
  }
}
